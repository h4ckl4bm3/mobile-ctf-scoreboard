<div class="row" >

  <div class="col-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Id
          </th>
          <th>
            Team Name
          </th>
          <th>
            Points
          </th>
          <th>
            Points This Round
          </th>
          <% if current_user %>
            <th>
              Link To Current/Last Challenge Submission
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% if current_user %>
          <tr>
            <th>
              <%= current_user.id %>
            </th>
            <td>
              <%= current_user.display_name %> (My Team)
            </td>
            <td>
              <%= current_user.score %>
            </td>
            <td>
              <%= current_user.score_for_round %>
            </td>
            <% if current_user and @last_defense_period %>
              <td>
                <% if @last_defense_period %>
                  <%= link_to "app.zip", "/#{@last_defense_period.id}/#{current_user.id}.zip" %>
                <% else %>
                  No prior defense periods on record
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <% if !@teams.blank? %>
          <% for team in @teams%>
            <% if current_user != team %>
              <tr>
                <th>
                  <%= team.id %>
                </th>
                <td>
                  <%= team.display_name %>
                </td>
                <td>
                  <%= team.score %>
                </td>
                <td>
                  <%= team.score_for_round %>
                </td>
                <% if current_user %>
                  <td>
                    <% if @last_defense_period %>
                      <%= link_to "app.zip", "/#{@last_defense_period.id}/#{team.id}.zip" %>
                    <% else %>
                      No prior defense periods on record
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        <% else %>
          <tr>
            <td colspan=4>
              <h1>No Teams to display</h1>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if current_user %>
    <div class="col -12">
      <strong>
        Please refresh this screen at the beginning of an Attack Period to view the latest links to
        players challenges.
      </strong>
    </div>
  <% end %>
</div>
